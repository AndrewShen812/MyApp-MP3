<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/distance_10dp">

    <ImageView
        android:id="@+id/iv_song_item_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_item_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌名"/>
        <TextView
            android:id="@+id/tv_song_item_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手"/>
        <TextView
            android:id="@+id/tv_song_item_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑"/>
    </LinearLayout>

</LinearLayout>
